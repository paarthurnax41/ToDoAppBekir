<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EEDB"
    tools:context=".AddToDoActivity">

    <EditText
        android:id="@+id/toDoNameEditTXT"
        android:layout_width="238dp"
        android:layout_height="81dp"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="210dp"
        android:ems="10"
        android:hint="Titel"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addButtonAdd"
        app:layout_constraintEnd_toEndOf="@+id/toDoContentEditTXT"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/toDoContentEditTXT"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/toDoContentEditTXT"
        android:layout_width="239dp"
        android:layout_height="143dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="89dp"
        android:ems="10"
        android:hint="Was"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cancelButton"
        app:layout_constraintEnd_toEndOf="@+id/addButtonAdd"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/toDoNameEditTXT" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="211dp"
        android:layout_height="252dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelButton"
        app:srcCompat="@drawable/beartranslatorrr" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F3EEDB"
        android:onClick="cancelBtn"
        android:text="Cancel"
        android:textColor="@color/black"
        android:fontFamily="@font/disneyheroic"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/addButtonAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDoContentEditTXT" />

    <Button
        android:id="@+id/addButtonAdd"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="53dp"
        android:backgroundTint="#F3EEDB"
        android:onClick="addBtnAdd"
        android:text="Add"
        android:fontFamily="@font/disneyheroic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/toDoNameEditTXT" />

</androidx.constraintlayout.widget.ConstraintLayout>
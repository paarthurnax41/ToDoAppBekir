<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EEDB"
    tools:context=".ModifityToDoActivity">

    <EditText
        android:id="@+id/name_id_modify"
        android:layout_width="267dp"
        android:layout_height="105dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:outlineProvider="background"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/content_id_modify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/content_id_modify"
        android:layout_width="324dp"
        android:layout_height="198dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="97dp"
        android:ems="10"
        android:hint="Content"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/delete_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/delete_button_id"
        android:layout_width="132dp"
        android:layout_height="91dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="225dp"
        android:backgroundTint="#F3EEDB"
        android:onClick="deleteBtn"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/update_button_id"
        app:layout_constraintTop_toBottomOf="@+id/content_id_modify"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/update_button_id"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="63dp"
        android:backgroundTint="#F3EEDB"
        android:onClick="updateBtn"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/delete_button_id"
        app:layout_constraintEnd_toStartOf="@+id/delete_button_id"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/stat_notify_sync" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="218dp"
        android:layout_height="237dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/beartranslatorrr" />


</androidx.constraintlayout.widget.ConstraintLayout>